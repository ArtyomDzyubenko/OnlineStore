@model IEnumerable<OnlineStore.Models.Goods>

@{
    ViewBag.Title = "Витрина";
}

<h2>Витрина</h2>

@if (User.IsInRole("ORA_DBA"))
{
    <p>
        @Html.ActionLink("Создать товар", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @if (User.IsInRole("ORA_DBA"))
                {
                    <p>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.goods_id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.goods_id }) |
                    </p>
                }

                @Html.ActionLink("Информация", "Details", new { id = item.goods_id }) |
                @Html.ActionLink("В корзину", "AddToBasket", "Basket", new { id = item.goods_id }, null)
            </td>
        </tr>
    }

</table>
